{
  "name": "clide-js",
  "version": "0.2.2",
  "description": "A framework for building flexible and extensible CLIs",
  "license": "MIT",
  "type": "module",
  "author": "ryan goree (https://github.com/ryangoree)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryangoree/clide-js"
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "build:docs": "typedoc",
    "dev": "NODE_ENV=development tsx src/cli/index.ts",
    "prod": "tsx src/cli/index.ts",
    "test": "vitest --reporter=verbose",
    "test:ci": "vitest --run",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cliui": "^8.0.1",
    "prompts": "^2.4.2",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/prompts": "^2.4.9",
    "@types/signale": "^1.4.7",
    "@types/yargs-parser": "^21.0.3",
    "@vitest/coverage-v8": "^2.1.3",
    "dotenv": "^16.4.5",
    "tsconfig": "*",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typedoc": "^0.26.10",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./test-utils": {
      "types": {
        "import": "./dist/test-utils.d.ts",
        "require": "./dist/test-utils.d.cts"
      },
      "import": "./dist/test-utils.js",
      "require": "./dist/test-utils.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ]
}
