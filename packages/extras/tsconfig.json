{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "include": ["src", "./*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    /* reference: https://aka.ms/tsconfig */
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "paths": {
      "src/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"]
  }
}
